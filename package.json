{
    "name": "nextjs15-boilerplate",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "preview": "next build && next start",
        "lint": "next lint && tsc --noemit",
        "lint:styles": "stylelint \"**/*.{scss,css}\" --fix",
        "format": "prettier --config .prettierrc \"**/*.{js,jsx,ts,tsx,scss,css,md,json}\" --write",
        "format:check": "prettier --config .prettierrc \"**/*.{js,jsx,ts,tsx,scss,css,md,json}\" --check",
        "clean:nm": "pnpx rimraf pnpm-lock.yaml && pnpx rimraf node_modules",
        "clean:cache": "pnpx rimraf .next",
        "reinstall": "pnpm clean:cache && pnpm clean:nm && pnpm i",
        "precommit": "pnpm lint && pnpm lint:styles && pnpm format",
        "prepare": "husky"
    },
    "compilerOptions": {
        "types": [
            "node"
        ]
    },
    "browserslist": [
        ">0.3%",
        "not dead",
        "not op_mini all"
    ],
    "peerDependencies": {
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "dependencies": {
        "@gsap/react": "^2.1.2",
        "@mantine/core": "^8.1.1",
        "@mantine/form": "^8.1.1",
        "@mantine/hooks": "^8.1.1",
        "@mantine/nprogress": "^8.1.1",
        "gsap": "^3.13.0",
        "next": "15.3.4",
        "next-intl": "^4.1.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
        "@tabler/icons-react": "^3.34.0",
        "@types/node": "^24.0.3",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "clsx": "^2.1.1",
        "eslint": "^9.29.0",
        "eslint-config-next": "15.3.4",
        "eslint-config-prettier": "^10.1.5",
        "husky": "^9.1.7",
        "next-view-transitions": "^0.3.4",
        "postcss": "^8.5.6",
        "postcss-preset-mantine": "^1.17.0",
        "prettier": "^3.5.3",
        "sass-embedded": "^1.89.2",
        "stylelint": "^16.21.0",
        "stylelint-config-recess-order": "^7.1.0",
        "stylelint-config-recommended-scss": "^15.0.1",
        "stylelint-config-standard-scss": "^15.0.1",
        "stylelint-order": "^7.0.0",
        "stylelint-selector-bem-pattern": "^4.0.1",
        "swiper": "^11.2.8",
        "typescript": "^5.8.3"
    }
}
