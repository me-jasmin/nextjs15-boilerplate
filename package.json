{
    "name": "nextjs15-boilerplate",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "preview": "next build && next start",
        "lint": "next lint && tsc --noemit",
        "lint:styles": "stylelint \"**/*.{scss,css}\"",
        "format": "prettier --config .prettierrc \"**/*.{js,jsx,ts,tsx,scss,css,md,json}\" --write",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,scss,css,md,json}\"",
        "clean:nm": "pnpm rimraf pnpm-lock.yaml && pnpm rimraf node_modules",
        "clean:cache": "pnpm rimraf .next",
        "reinstall": "pnpm clean:cache && pnpm clean:nm && pnpm i"
    },
    "compilerOptions": {
        "types": [
            "node"
        ]
    },
    "dependencies": {
        "@mantine/core": "^8.0.1",
        "@mantine/hooks": "^8.0.1",
        "next": "15.3.2",
        "next-intl": "^4.1.0",
        "next-themes": "^0.4.6",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
        "@tabler/icons-react": "^3.33.0",
        "@types/node": "^22.15.21",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "clsx": "^2.1.1",
        "eslint": "^9",
        "eslint-config-next": "15.3.2",
        "eslint-config-prettier": "^10.1.5",
        "postcss": "^8.5.3",
        "postcss-preset-mantine": "^1.17.0",
        "postcss-syntax": "^0.36.2",
        "prettier": "^3.2.5",
        "rimraf": "^6.0.1",
        "sass": "^1.89.0",
        "sass-embedded": "^1.89.0",
        "stylelint": "^16.19.1",
        "stylelint-config-recommended": "^16.0.0",
        "stylelint-config-recommended-scss": "^15.0.1",
        "stylelint-config-sass-guidelines": "^12.1.0",
        "stylelint-order": "^7.0.0",
        "stylelint-selector-bem-pattern": "^4.0.1",
        "typescript": "^5"
    }
}